{
  "$schema": "https://raw.githubusercontent.com/jetpack-io/devbox/main/.schema/devbox.schema.json",
  "packages": [
    "neovim@latest",
    "lazygit@latest",
    "lazydocker@latest",
    "volta@latest",
    "bun@latest",
    "uv@latest"
  ],
  "env": {
    "SHELL": "/bin/bash",
    "EDITOR": "nvim",
    "DEVBOX_HOME": "$PWD",
    "XDG_CONFIG_HOME": "$PWD/.config",
    "XDG_DATA_HOME": "$PWD/.local/share",
    "XDG_STATE_HOME": "$PWD/.local/state",
    "XDG_CACHE_HOME": "$PWD/.cache",
    "GEMINI_CLI_HOME": "$PWD",
    "BUN_INSTALL": "$PWD/.bun",
    "VOLTA_HOME": "$PWD/.volta",
    "NPM_CONFIG_USERCONFIG": "$PWD/.config/npm/npmrc",
    "NPM_CONFIG_CACHE": "$PWD/.cache/npm",
    "YARN_CACHE_FOLDER": "$PWD/.cache/yarn",
    "UV_CACHE_DIR": "$PWD/.cache/uv"
  },
  "shell": {
    "init_hook": [
      "export PATH=\"$BUN_INSTALL/bin:$VOLTA_HOME/bin:$PATH\"",
      "export PS1='\\[\\033[01;32m\\]\\u@\\[\\033[01;36m\\]devbox\\[\\033[00m\\]:\\[\\033[01;34m\\]\\w\\[\\033[00m\\]\\$ '",
      "source bash_aliases.sh",
      "source bash_functions.sh",
      "source bash_setup.sh"
    ],
    "scripts": {}
  }
}
