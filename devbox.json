{
  "$schema": "https://raw.githubusercontent.com/jetpack-io/devbox/main/.schema/devbox.schema.json",
  "packages": [
    "neovim@latest",
    "lazygit@latest",
    "lazydocker@latest",
    "volta@latest",
    "bun@latest",
    "uv@latest"
  ],
  "env": {
    "SHELL": "/bin/bash",
    "EDITOR": "nvim",
    "XDG_CONFIG_HOME": "$PWD/.config",
    "XDG_DATA_HOME": "$PWD/.local/share",
    "XDG_STATE_HOME": "$PWD/.local/state",
    "XDG_CACHE_HOME": "$PWD/.cache",
    "GEMINI_CLI_HOME": "$PWD",
    "BUN_INSTALL": "$PWD/.bun",
    "VOLTA_HOME": "$PWD/.volta",
    "NPM_CONFIG_USERCONFIG": "$PWD/.config/npm/npmrc",
    "NPM_CONFIG_CACHE": "$PWD/.cache/npm",
    "YARN_CACHE_FOLDER": "$PWD/.cache/yarn",
    "UV_CACHE_DIR": "$PWD/.cache/uv",
    "DEVBOX_HOME": "$PWD"
  },
  "shell": {
    "init_hook": [
      "source .bash_aliases",
      "source .bash_functions",
      "export NO_BLOWSER=1",
      "export PATH=\"$BUN_INSTALL/bin:$VOLTA_HOME/bin:$PATH\"",
      "export PS1='\\[\\033[01;32m\\]\\u@devbox\\[\\033[00m\\]:\\[\\033[01;34m\\]\\w\\[\\033[00m\\]\\$ '",
      "if [ ! -f \".config/git/config\" ]; then",
      "  echo 'ðŸ“ Git identity not found. Please set it for this workspace.'",
      "  mkdir -p .config/git",
      "  read -p 'Enter Git User Name: ' git_name",
      "  read -p 'Enter Git User Email: ' git_email",
      "  printf \"[user]\\n  name = %s\\n  email = %s\\n\" \"$git_name\" \"$git_email\" > .config/git/config",
      "  echo 'âœ… Git identity saved to .config/git/config'",
      "fi",
      "if [ ! -d \"$VOLTA_HOME/tools\" ]; then",
      "  echo 'ðŸ“¦ Installing node, yarn and global packages with volta...'",
      "  volta install node@20",
      "  volta install yarn@1.22.22",
      "  volta install @google/gemini-cli typescript @vtsls/language-server @vue/language-server @fsouza/prettierd @tailwindcss/language-server shfmt",
      "fi"
    ],
    "scripts": {}
  }
}
